<div class="row">
  <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
  <h2>Sign up form</h2>
    <form method="POST" action="/sign-up">
      <fieldset>
        <legend>Please enter details</legend>
        <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control" type="text" name="name" id="name">
        </div>
        <div class="form-group">
          <label for="name">My Gym</label>
          <input class="form-control" type="text" name="my_gym" id="my_gym">
        </div>
        <div class="form-group">
          <label for="name">My City</label>
          <input class="form-control" type="text" name="my_city" id="my_city">
        </div>
        <div class="form-group">
          <label for="email">Mobile Number</label>
          <input class="form-control" type="text" name="mobile_number" id="mobile_number">
        </div>
        <div class="form-group">
          <label for="email">Email address</label>
          <input class="form-control" type="email" name="email" id="email">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control" type="password" name="password" id="password">
        </div>
        <div class="form-group">
          <input class="btn btn-primary" type="submit" value="Sign up">
        </div>
      </fieldset>
    </form>
  </div>
</div>
